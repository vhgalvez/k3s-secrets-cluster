# secrets-templates\argocd-secret.yaml.j2
apiVersion: v1              # ✅ Correcto: API de Kubernetes
kind: Secret                # ✅ Correcto: tipo de recurso
metadata:
  name: argocd-secret       # ✅ Nombre único del Secret
  namespace: argocd         # ✅ Namespace específico para ArgoCD
type: Opaque                # ✅ Tipo adecuado para secretos genéricos
data:
  username: {{ argocd_auth_user | b64encode }}   # ✅ Codificación base64 en Jinja2
  password: {{ argocd_auth_pass | b64encode }}   # ✅ Codificación base64 en Jinja2
